/* pages/detail/detail.wxss */

.container {
  box-sizing: border-box;
  font-family: "Helvetica Neue",
                 Helvetica,
                 "PingFang SC",
                 "Hiragino Sans GB",
                 "Microsoft YaHei",
                 "微软雅黑",
                 Arial,
                 sans-serif;
  -webkit-tap-highlight-color: rgba(255, 255, 255, 0);
  color: #666;
}

.item-top {
  position: relative;
}

.item-img {
  width: 100%;
  height: 225px;
}

.item-title {
  width: 60%;
  margin: 0;
  padding: 0;
  right: 5%;
  bottom: 25%;
  text-align: right;
  font-size: 16px;
  color: rgba(255, 255, 255, 0.9);
  position: absolute;
  text-shadow: 0 0 5px rgba(0, 0, 0, 0.5);
}

.item-body {
  padding: 5%;
  position: relative;
}

.main-wrap .author {
  color: #fc4482;
  display: inline-table;
}

.main-wrap  .meta {
  text-align: left;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.main-wrap .content-image {
  max-width: 100%;
  display: block;
  margin: 2%;
}

.main-wrap .content {
  font-size: 15px;
  margin-top: 3%;
}

.item-more {
  text-align: center;
  margin-top: 5%;
}

.main-wrap .question-title {
  color: #5b7492;
  position: relative;
  z-index: 1;
  font-size: 18px;
}

.more-item {
  font-size: 14px;
  padding: 5%;
}

.more-item .more-top {
  display: flex;
}
.more-item .more-content{
  margin-top: 5px;
}

.more-item .more-top .more-avatar {
  width: 40px;
  height: 40px;
  display: inline-block;
  overflow: hidden;
  border-radius: 50%;
}

.more-item .more-top .more-title {
  vertical-align: middle;
  margin: 8px;
  color: #646464;
}
