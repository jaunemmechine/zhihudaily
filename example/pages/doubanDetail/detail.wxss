.film-item {
  padding: 10px;
  display: flex;
  background: #253b39;
  color: #f1f1f1;
  font-size: 22rpx;
}

.film-title-rating {
  display: flex;
  justify-content: space-between;
}

.film-title {
  color: #fff;
  font-size: 36rpx;
}

.film-rating {
  color: rgba(245, 8, 8, 0.932);
  font-size: 38rpx;
  margin-right: 2%;
  width: 50px;
}

.film-image {
  width: 128px;
  position: relative;
}

.film-image .film-img {
  width: 100%;
  height: 180px;
}

.play {
  width: 48px;
  height: 48px;
  position: absolute;
  margin: auto;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
}

.play-content {
  position: relative;
}

.play-close {
  position: absolute;
  top: 5px;
  right: 5px;
  z-index: 999;
  width: 50px;
  text-align: center;
}

.play-title {
  position: absolute;
  top: 5px;
  z-index: 999;
  left: 8px;
  color: #fff;
}

.play-video {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
  width: 100%;
  height: 300px;
}

.film-info {
  padding-left: 10px;
  flex: 1;
}

.film-info view {
  margin-bottom: 10px;
}

.film-country-time {
  color: rgb(255, 210, 30);
}

.film-wish {
  background: #253b39;
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
}

.film-wish .like, .star {
  background: #2a4c55;
  color: #f1f1f1;
  width: 45%;
  margin: 0 auto;
  text-align: center;
  height: 40px;
  border-radius: 8px;
}

.wish-top {
  margin-top: 10px;
}

.summary, .person {
  padding: 10rpx 20rpx;
}

.summary .title, .person .title {
  font-size: 16px;
  margin: 15px 0;
  color: #777;
}

.summary .content {
  padding-top: 10px;
  font-size: 14px;
  color: #333;
  line-height: 25px;
}

.alert-title {
  text-align: center;
  margin-top: 10px;
}

.alert-content {
  text-align: center;
  margin: 15px;
}

.alert-footer {
  position: absolute;
  bottom: 0;
  height: 40px;
  width: 100%;
  display: flex;
  align-items: center;
  text-align: center;
  color: #323233;
  background-color: #fff;
  border-top: 1px solid #ebedf0;
  border-left: 1px solid #07c160;
  border-bottom-left-radius: 8px;
  border-bottom-right-radius: 8px;
}

.alert-footer-button {
  width: 50%;
  padding: 10px;
}

.confirm-btn {
  background: #07c160;
  border-bottom-left-radius: 8px;
}

.directors-casts {
  display: flex;
  white-space: nowrap;
  font-size: 14px;
  text-align: center;
}

.directors-casts .person-item {
  margin-left: 10px;
  margin-top: 10px;
  display: inline-block;
  vertical-align: text-top;
}

.directors-casts image {
  width: 90px;
  height: 120px;
}

.directors-casts .text {
  color: #ccc;
}

.comment {
  margin-top: 20px;
}

.reviews-title {
  padding-left: 20rpx;
  margin-top: 10px;
}

.comment-item {
  display: flex;
  margin-bottom: 10px;
  padding: 10rpx 20rpx;
}

.avatar image {
  border-radius: 50%;
  width: 48px;
  height: 48px;
}

.comment-right {
  margin-left: 5px;
  width: 100%;
}

.comment-right .author {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.comment-right .comment-content {
  font-size: 14px;
  color: #333;
  margin-bottom: 5px;
}

.comment-right .comment-time {
  font-size: 12px;
  color: #777;
}

.count image {
  width: 32px;
  height: 32px;
  vertical-align: bottom;
}

.text {
  color: #777;
}
